<assembly>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  
  <files>
    <file>
		<source>../../JBossORG-EULA.txt</source>
    </file>
    <file>
		<source>../../lgpl.txt</source>
    </file>
    <file>
		<source>../readme.txt</source>
		<outputDirectory>photoalbum</outputDirectory>
    </file>
  </files>

  <fileSets>
    <fileSet>
	  <directory>target/docs</directory>
      <outputDirectory>photoalbum/docs</outputDirectory>
	  <excludes>
		<exclude>**/META-INF/*</exclude>
		<exclude>**/META-INF</exclude>
	  </excludes>
    </fileSet>
    <fileSet>
	  <directory>../target/javadocs</directory>
      <outputDirectory>photoalbum/docs</outputDirectory>
    </fileSet>
    <fileSet>
	  <directory>../source</directory>
      <outputDirectory>photoalbum/source</outputDirectory>
	  <includes>
		<include>*/src/**</include>
		<include>*/sql/**</include>
		<include>*/environment/**</include>
		<include>**/*build.xml</include>
		<include>**/build.properties</include>
		<include>**/pom.xml</include>
		<include>**/readme.txt</include>
	  </includes>
	  <excludes>
		<exclude>**/target</exclude>
		<exclude>*/src/main/images/full</exclude>
		<exclude>*/src/main/images/full/**</exclude>
	  </excludes>
	</fileSet>
  <fileSet>
    <directory>../tests</directory>
    <outputDirectory>photoalbum/functional-tests</outputDirectory>
    <includes>
      <include>src/**</include>
      <include>pom.xml</include>
      <include>readme.txt</include>
    </includes>
  </fileSet>  
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>photoalbum/dist</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <includes>
          <include>org.richfaces.examples:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>